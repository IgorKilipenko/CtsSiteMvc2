
@{
    ViewBag.Title = "Галерея";
    string path = this.Server.MapPath("~/Images/PhotoGallery/");
    var imgFiles = System.IO.Directory.GetFiles(path, "*.*", SearchOption.AllDirectories);
}

<style>
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        width: 70%;
        margin: auto;
        max-height:500px;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">

        @{
            int imgCount = imgFiles.Length;
            if (imgCount > 0)
            {
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                for (int i = 1; i < imgCount; i++)
                {
                    <li data-target="#myCarousel" data-slide-to=@i></li>
                }
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @{
            if (imgCount > 0)
            {
                for (int i = 0; i < imgCount; i++)
                {
                    string src = "/Images/PhotoGallery/" + System.IO.Path.GetFileName(imgFiles[i]);
                    <div class="item @(i == 0 ? "active" : "")">
                        <img src="@(src)" alt="Chania">
                        <div class="carousel-caption">
                            <h3>КТС</h3>
                            <p>Фотографии</p>
                        </div>
                    </div>
                }
            }
        }

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

